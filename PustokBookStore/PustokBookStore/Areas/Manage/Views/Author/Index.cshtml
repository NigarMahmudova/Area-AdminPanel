@model List<Author>

@{
    int dataOrder = 0;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Authors</h1>
            <a class="btn btn-primary" asp-controller="author" asp-action="create">Create</a>
        </div>
        <div class="col-md-8">
            <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">FullName</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
                    @foreach (var item in Model)
                    {
                        dataOrder++;
        <tr>
          <th scope="row">@dataOrder</th>
            <td>@item.FullName</td>
            <td>
                <a class="btn btn-warning" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger">Delete</a>
            </td>
        </tr>
                    }
  </tbody>
</table>
        </div>
    </div>
</div>

